<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Global Header -->
    <include
        android:id="@+id/globalHeader"
        layout="@layout/global_header" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imagePager"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/titleText"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/locationText"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView android:id="@+id/guestsText" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/bedroomsText" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/bedsText" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/bathsText" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/priceText"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/landlordText"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Booking section -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#DDDDDD" />

            <TextView
                android:text="Book this listing"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/startDateText"
                android:text="Start date"
                android:padding="12dp"
                android:background="#EEEEEE"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/endDateText"
                android:text="End date"
                android:padding="12dp"
                android:background="#EEEEEE"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/totalPriceText"
                android:text="Total price: --"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/reserveButton"
                android:text="Reserve"
                android:enabled="false"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <!-- Global Footer -->
    <include
        android:id="@+id/globalFooter"
        layout="@layout/global_footer" />

</LinearLayout>
